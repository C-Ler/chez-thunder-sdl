;;;; -*- mode: Scheme; -*-
(define (sdl-mix-library-init . l)
  (load-shared-object
   (if (null? l)
       (case (machine-type)
	 ((i3nt  ti3nt  a6nt  ta6nt)  "SDL2_mixer.dll")
	 ((i3le  ti3le  a6le  ta6le)  "SDL2_mixer.so")
	 ((i3osx ti3osx a6osx ta6osx) "SDL2_mixer.dylib"))
       (car l)))
  )

